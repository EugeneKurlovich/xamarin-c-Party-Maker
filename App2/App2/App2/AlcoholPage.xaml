<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.AlcoholPage"
              BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" >
            <Label Text="Peoples"  TextColor="White" HorizontalOptions="Center" FontSize="Large"></Label>
            <Entry x:Name="nPeople"  Keyboard="Numeric"  Placeholder="Enter the number of people" TextColor="Black" BackgroundColor="Aqua"/>
            <Button Text="Ok"  Clicked="getPeoples_Clicked" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>