<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.SelectAlco">
    <ContentPage.Content>
        <StackLayout  VerticalOptions="Center">
            <Label Text="Alcohol"></Label>
            <Picker x:Name="picker1" Grid.Row="0" Title="Select Alcohol" >
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Piranha Cocktail</x:String>
                        <x:String>Daiquiri Cocktail</x:String>
                        <x:String>Margarita Cocktail</x:String>
                        <x:String>Arago Cocktail</x:String>
                        <x:String>GodFather Cocktail</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Ok" Clicked="selectAlc_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>