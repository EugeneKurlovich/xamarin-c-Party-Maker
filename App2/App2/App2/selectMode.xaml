<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.selectMode"
              BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout  VerticalOptions="Center" >
            <Label Text="Mode" TextColor="White" FontSize="Large" HorizontalOptions="Center"></Label>
            <Picker x:Name="picker2" Grid.Row="0" Title="Select Mode" BackgroundColor="Aqua" TextColor="Black"> 
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Easy</x:String>
                        <x:String>Middle</x:String>
                        <x:String>Hard</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Ok" Clicked="selectMode_Clicked" TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>